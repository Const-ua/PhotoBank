@model PhotoBank.Models.User

@{
    var title = "Delete user";
}
<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-4">
                        <label>First name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control" disabled="disabled "/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label>Last name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LastName" class="form-control" disabled="disabled "/>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label>Email</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Email" class="form-control" disabled="disabled "/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div v class="form-group row">
                    <div class="col-4">
                        <label>Address</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control"  disabled="disabled "/>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div v class="form-group row">
                    <div class="col-4">
                        <label>Phone</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Phone" class="form-control"  disabled="disabled "/>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div v class="form-group row">
                    <div class="col-8 form-check offset-5">
                        <input asp-for="IsAuthor" type="checkbox" name="IsAuthor" class="form-check-input" id="IsAuthor" value="@Model.IsAuthor"  disabled="disabled "/>
                        <label for="IsAuthor" class="form-check-label">Author</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                             <input type="submit" class="btn btn-danger w-100" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-controller="Account" asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
