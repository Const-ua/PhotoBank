@model Photo

<div class="col-sm-4">
    <div class="card">
        <div class="image">
            <img src="@WebConstants.PreviewPath@Model.Preview" alt="@Model.Name" />
        </div>
        <div class="card-inner">
            <div class="header">
                <h2>@Model.Name</h2>
                <h3>by @Model.Author.FirstName @Model.Author.LastName</h3>
            </div>
            <div class="border card-text">
                <p>@Model.Description</p>
            </div>
        </div>

        <a class="btn btn-primary" onclick="addToCart('@Model.Id')"> Add to cart</a>  @*asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id"*@
    </div>
</div>


