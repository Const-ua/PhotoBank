@model IEnumerable<PhotoBank.Models.Photo>


<div class="container p-3 pt-4 col-10">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary">Photos</h2>
        </div>
        <div class="col-4 text-right">
            <a class="btn btn-primary" asp-action="Create">Add Photo</a>
        </div>
    </div>
    <br />
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <tr>
                <th>Preview</th>
                <th>Name</th>
                <th>Author</th>
                <th>Price</th>
                <th></th>
            </tr>
            <tbody>
            @foreach (var photo in Model)
            {
                <tr>
                    <td><img src="@WebConstants.PreviewPath@photo.Preview" alt="@photo.Name"></td>
                    <td>@photo.Name</td>
                    <td>@photo.Author.FirstName @photo.Author.LastName </td>
                    <td>@photo.Price</td>
                    <td>
                        <div class="text-center">
                            <div class="w-50 btn-group" role="group">
                                <a class="btn btn-sm btn-primary mx-2" asp-action="Edit" asp-route-id="@photo.Id">Edit</a>
                                <a class="btn btn-sm btn-danger mx-2" asp-action="Delete" asp-route-id="@photo.Id">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h2>There are no photos yet.</h2>
    }
</div>
