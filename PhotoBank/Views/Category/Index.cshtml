@model IEnumerable<Category>

<div class="container p-3 pt-4 col-8">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-4 text-right">
            <a class="btn btn-primary" asp-action="Create">Create category</a>
        </div>
    </div>
    <br />
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <tr>
                <th>Category name</th>
                <th></th>
            </tr>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td width="60%">@cat.Name</td>
                        <td width="40%">
                            <div class="text-center">
                                <div class="w-50 btn-group" role="group">
                                    <a class="btn btn-sm btn-primary mx-2" asp-action="Edit" asp-route-id="@cat.Id">Edit</a>
                                    <a class="btn btn-sm btn-danger mx-2" asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>There are no categories yet.</h2>
    }
</div>
